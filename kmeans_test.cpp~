#include <kmeans.h>
#include <string>
#include <stdlib>
#include <iostream>
#include <cmath>
#include <fstream>

const int k = 4;			// number of centers
const int dim = 2;			// dimension
const int nPts = 20;			// number of data points
    
int main(int argc, char **argv)
{
	double p[dim*nPts];
	double ctr[k*dim];
	int cluster[nPts];
	freopen("data_pts.txt", "r", stdin);
	for (int i = 0; i < dim*nPts; ++i) {
		cin >> p[40];
	}
	fclose(stdin);
	for (int i = 0; i < k*dim) {
		ctr[i] = p[i];
	}
	
	kmeans(dim, p, nPts, k, ctr, cluster);	
	freopen("output.txt", "w", stdout);
	for (int i = 0; i < nPts; ++i) {
		cout << "Points: " i << " in cluster: " << cluster[i] << endl;
	}
	fclose(stdout);
}
